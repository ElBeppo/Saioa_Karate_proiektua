<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_conpetizio_berria"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context="com.example.beppo.saioacompetition.Conpetizio_berria">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/Copaimg"
        android:src="@drawable/campeonato_new_img"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtID"
        android:layout_below="@id/Copaimg"
        android:layout_marginTop="60dp"
        android:text="@string/ID"
        android:textSize="18dp"
        android:textColor="@color/black"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvlID"
        android:layout_below="@id/Copaimg"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/txtID"
        android:layout_marginLeft="10dp"
        android:width="200dp"
        android:hint="@string/Fetxa"
        android:textColorHint="@color/colorAccent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtIzena"
        android:layout_below="@id/txtID"
        android:layout_marginTop="50dp"
        android:text="@string/Izena"
        android:textSize="18dp"
        android:textColor="@color/black"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvlIzena"
        android:layout_below="@id/lvlID"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/txtIzena"
        android:layout_marginLeft="10dp"
        android:width="200dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLekua"
        android:layout_below="@id/txtIzena"
        android:layout_marginTop="50dp"
        android:text="@string/Lekua"
        android:textSize="18dp"
        android:textColor="@color/black"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvlLekua"
        android:layout_below="@id/lvlIzena"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/txtLekua"
        android:layout_marginLeft="10dp"
        android:width="200dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtFetxa"
        android:layout_below="@id/txtLekua"
        android:layout_marginTop="50dp"
        android:text="@string/Fetxa"
        android:textSize="18dp"
        android:textColor="@color/black"/>



</RelativeLayout>
